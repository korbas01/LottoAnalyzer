<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Layout1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetWinningNums(649)"
        android:id="@+id/BtnGetWinNums"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetLastWinningNums(649)"
        android:id="@+id/BtnGetLastWinNums"
        android:layout_below="@+id/BtnGetWinNums"
        android:layout_alignEnd="@+id/BtnGetWinNums"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUN"
        android:id="@+id/BtnRun"
        android:layout_below="@+id/BtnGetLastWinNums"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/BtnGetLastWinNums" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtBoxResult"
        android:text="Result..."
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="111dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetAllNumbers"
        android:id="@+id/BtnGetAllNums"
        android:layout_below="@+id/BtnRun"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/BtnRun" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_main_activity">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>
